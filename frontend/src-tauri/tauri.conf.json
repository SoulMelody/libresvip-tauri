{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LibreSVIP-Tauri",
  "version": "2.2.0",
  "identifier": "org.soulmelody.libresvip",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "LibreSVIP",
        "width": 800,
        "minWidth": 520,
        "height": 600,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "externalBin": [
      "libresvip-tauri-server"
    ],
    "resources": [
      "_internal/**/*"
    ],
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": true
      }
    }
  }
}
